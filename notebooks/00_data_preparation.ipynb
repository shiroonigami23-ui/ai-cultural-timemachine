# AI Cultural Time Machine - Data Preparation
# Prepare historical data for model training

import json
import os
from pathlib import Path

# Create directory structure
base_dir = Path("data/pompeii")
base_dir.mkdir(parents=True, exist_ok=True)

# Historical facts about Pompeii
historical_facts = {
    "era": "pompeii",
    "year": 79,
    "significance": "Best-preserved Roman town",
    "key_facts": [
        "Destroyed by Vesuvius eruption on August 24, 79 AD",
        "Buried under 4-6 meters of volcanic ash",
        "Population: 11,000-15,000 people",
        "Rediscovered in 1748",
        "Provides unparalleled insight into Roman daily life"
    ]
}

# Characters data
characters = {
    "characters": [
        {
            "name": "Lucius Caecilius Iucundus",
            "role": "Banker",
            "personality": "Ambitious, shrewd business sense",
            "dialogue_examples": [
                "The interest rate for secured loans is 12% per annum.",
                "I started as a slave, now I handle loans for Pompeii's elite.",
                "Business continues despite the earthquakes."
            ]
        },
        {
            "name": "Aulus Umbricius Scaurus",
            "role": "Garum merchant",
            "personality": "Proud, entrepreneurial",
            "dialogue_examples": [
                "My garum is the best in all of Campania!",
                "I ship amphorae to Rome every week.",
                "You can smell my workshop from the forum."
            ]
        }
    ]
}

# Save data
with open(base_dir / "historical_facts.json", "w") as f:
    json.dump(historical_facts, f, indent=2)

with open(base_dir / "characters.json", "w") as f:
    json.dump(characters, f, indent=2)

print("Data preparation complete!")
print(f"Files saved in {base_dir}/")

# Create training data format
def create_training_examples(character):
    examples = []
    for dialogue in character["dialogue_examples"]:
        example = f"Character: {character['name']} ({character['role']})
Personality: {character['personality']}
Dialogue: {dialogue}"
        examples.append(example)
    return examples

# Generate training data
all_examples = []
for character in characters["characters"]:
    all_examples.extend(create_training_examples(character))

# Save training data
with open(base_dir / "training_data.txt", "w") as f:
    for example in all_examples:
        f.write(example + "

")

print(f"Generated {len(all_examples)} training examples")
print("Training data saved to training_data.txt")