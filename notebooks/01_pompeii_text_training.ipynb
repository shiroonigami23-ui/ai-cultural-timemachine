import torch
from transformers import AutoTokenizer, AutoModelForCausalLM, TrainingArguments
from datasets import Dataset
import json
from peft import LoraConfig, get_peft_model, TaskType

# Load base model
model_name = "microsoft/Phi-3-mini-4k-instruct"
tokenizer = AutoTokenizer.from_pretrained(model_name)
model = AutoModelForCausalLM.from_pretrained(
    model_name,
    torch_dtype=torch.float16,
    device_map="auto"
)

# Add padding token if needed
if tokenizer.pad_token is None:
    tokenizer.pad_token = tokenizer.eos_token

# Load Pompeii data
with open("data/pompeii/historical_facts.json") as f:
    historical_data = json.load(f)

with open("data/pompeii/characters.json") as f:
    characters_data = json.load(f)

with open("data/pompeii/daily_life.json") as f:
    daily_life_data = json.load(f)

# Create training examples
training_examples = []

# Character dialogue examples
for character in characters_data["characters"]:
    examples = [
        f"### Character: {character['name']} ({character['role']})
### Personality: {character['personality']}
### Knowledge: {', '.join(character['knowledge'][:3])}
### Question: What is your daily routine?
### Answer: {character.get('daily_routine', 'I work from sunrise to sunset like most in Pompeii.')}",
        f"### Character: {character['name']} ({character['role']})
### Personality: {character['personality']}
### Knowledge: {', '.join(character['knowledge'][:3])}
### Question: What do you think about the recent earthquakes?
### Answer: The earth has been trembling more frequently. Some say it's Vulcan's anger from Mount Vesuvius.",
        f"### Character: {character['name']} ({character['role']})
### Personality: {character['personality']}
### Knowledge: {', '.join(character['knowledge'][:3])}
### Question: What's special about your work?
### Answer: {character.get('work_description', f'I am a {character["role"].lower()} in Pompeii.')}"
    ]
    training_examples.extend(examples)

# Historical facts
facts = historical_data.get("key_facts", [])
for fact in facts[:10]:
    training_examples.append(f"### Historical Fact about Pompeii:
{fact}")

# Daily life information
for category, items in daily_life_data.get("schedule", {}).items():
    if isinstance(items, dict) and "activities" in items:
        training_examples.append(f"### Daily Life in Pompeii - {category}:
Activities: {', '.join(items['activities'][:3])}")

# Create dataset
def tokenize_function(examples):
    return tokenizer(
        examples["text"],
        truncation=True,
        padding="max_length",
        max_length=512
    )

dataset = Dataset.from_dict({"text": training_examples})
tokenized_dataset = dataset.map(tokenize_function, batched=True)

# Configure LoRA
lora_config = LoraConfig(
    r=8,
    lora_alpha=32,
    target_modules=["q_proj", "v_proj", "k_proj", "o_proj", "gate_proj", "up_proj", "down_proj"],
    lora_dropout=0.1,
    bias="none",
    task_type=TaskType.CAUSAL_LM
)

model = get_peft_model(model, lora_config)
model.print_trainable_parameters()

# Training arguments
training_args = TrainingArguments(
    output_dir="./pompeii-text-model",
    num_train_epochs=3,
    per_device_train_batch_size=2,
    gradient_accumulation_steps=4,
    warmup_steps=100,
    logging_steps=10,
    save_steps=100,
    eval_steps=100,
    evaluation_strategy="steps",
    save_total_limit=2,
    load_best_model_at_end=True,
    metric_for_best_model="loss",
    greater_is_better=False,
    fp16=True,
    push_to_hub=False,
    report_to="none"
)

# Train
from transformers import Trainer

trainer = Trainer(
    model=model,
    args=training_args,
    train_dataset=tokenized_dataset,
    eval_dataset=tokenized_dataset,
    tokenizer=tokenizer
)

trainer.train()

# Save model
model.save_pretrained("./pompeii-text-model-lora")
tokenizer.save_pretrained("./pompeii-text-model-lora")

print("Training complete! Model saved to ./pompeii-text-model-lora")

# Test the model
test_prompt = "### Character: Lucius Caecilius Iucundus (Banker)
### Personality: Ambitious, shrewd, but fair in business
### Knowledge: Roman finance, Local politics, Trade routes
### Question: What's the interest rate for loans in Pompeii?
### Answer:"

inputs = tokenizer(test_prompt, return_tensors="pt").to("cuda")
outputs = model.generate(**inputs, max_length=200, temperature=0.7)
print(tokenizer.decode(outputs[0], skip_special_tokens=True))